@using SE2_IMDB.Models.Entity
@{
    if (ViewContext.RouteData.Values["controller"].ToString() != "Login")
    { Account.GetID(HttpContext.Current);}
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FIDBoM</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FIDBoM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.LiActionLink("Films", "Index", "Film")
                    @Html.LiActionLink("Persons", "Index", "Person")


                    @if (Account.GetID(HttpContext.Current).ID == 0)
                    {@Html.LiActionLink("Login", "Index", "Login") }
                    else
                    { @Html.LiActionLink("Logout", "Logout", "Login") }
                </ul>
            </div>
        </div>
    </div>

<div class="container body-content">
    @if(!string.IsNullOrEmpty(StaticData.Message)) {
            <div class="row text-center" style="background-color: #F2F5A9"> <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> @StaticData.GetAndResetMessage() </div>
    }
    @if (!string.IsNullOrEmpty(StaticData.Confirmation))
    {
        <div class="row text-center" style="background-color: #BCF5A9"> <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> @StaticData.GetAndResetConfirmation() </div>
    }

    

    @RenderBody()
    <hr/>
    <footer>
        <p class="footer text-right"> &copy; @DateTime.Now.Year - Youri Schuurmans - Alle rechten voorbehouden</p>
    </footer>
</div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>